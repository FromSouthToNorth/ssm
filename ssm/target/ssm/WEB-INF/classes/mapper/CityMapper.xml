<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hy.ssm.dao.CityDAO">

    <select id="findAll" resultType="java.util.LinkedHashMap">
        SELECT
            id,
            `name`
        FROM t_city
    </select>

    <select id="findByProvinceId" resultType="java.util.LinkedHashMap" parameterType="java.lang.Long">
        SELECT
            id,
            `name`
        FROM t_city
        WHERE province_id = #{id}
    </select>

</mapper>